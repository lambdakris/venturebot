---
trip:
  title: "{{ plan.title }}"
  date: "{{ plan.date }}"
  objective: "{{ plan.objective }}"
  type: "{{ plan.trip_type }}"

metrics:
  distance_miles: {{ plan.metrics.distance_miles }}
  elevation_gain_ft: {{ plan.metrics.elevation_gain_ft }}
  elevation_summit_ft: {{ plan.metrics.elevation_summit_ft }}
  elevation_trailhead_ft: {{ plan.metrics.elevation_trailhead_ft }}
  duration_hours: "{{ plan.metrics.duration_hours }}"

location:
  county: "{{ plan.county }}"
  area: "{{ plan.area }}"

trailhead:
  name: "{{ plan.trailhead_name }}"
  location: "{{ plan.trailhead_location }}"
  arrival_time: "{{ plan.trailhead_time }}"

carpool:
  name: "{{ plan.carpool_name }}"
  location: "{{ plan.carpool_location }}"
  departure_time: "{{ plan.carpool_time }}"

timing:
  sunrise: "{{ plan.sunrise }}"
  sunset: "{{ plan.sunset }}"
  turnaround_time: "{{ plan.turnaround_time }}"
{% if plan.avalanche %}

avalanche:
  forecast_link: "{{ plan.avalanche.forecast_link }}"
  risk_level: "{{ plan.avalanche.risk_level }}"
  problems:
{% for problem in plan.avalanche.problems %}
      - {{ problem }}
{% endfor %}
  key_concerns: "{{ plan.avalanche.key_concerns }}"
{% endif %}
---

